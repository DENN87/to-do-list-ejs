<%- include('header'); -%>
     <div>
          <div class="box" id="heading">
               <h1>
                    <%= listTitle %>
               </h1>
          </div>
          <div class="box">
               <ul>
                    <% newListItems.forEach((item)=> { %>
                         <form action="/delete" method="post">
                              <div class="item">
                                   <input type="checkbox" name="checkbox" value=<%=item._id %>
                                   onchange="this.form.submit()"
                                   />
                                   <p>
                                        <%= item.name %>
                                   </p>
                              </div>
                              <input type="hidden" name="listName" value=<%=listTitle%> />
                         </form>
                         <% }) %>
               </ul>
               <form action="/" method="post" class="item">
                    <input type="text" name="newItem" placeholder="New Item" autofocus autocomplete="off"
                         onkeyup="if(this.value.length > 0) document.getElementById('add-btn').disabled = false; else document.getElementById('add-btn').disabled = true;" />
                    <button type="submit" name="list" id="add-btn" value=<%=listTitle %> disabled>+</button>
               </form>
          </div>
     </div>

     </body>

     </html>